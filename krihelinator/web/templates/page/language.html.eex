<div class="well">
  <h1><%= @language.name %></h1>

  <div>
    <p>Total Krihelimeter: <b><%= @language.krihelimeter %></b></p>
    <p>Active repositories: <b><%= @language.num_of_repos %></b></p>
    <%= link "Show language history", to: language_history_path(@conn, @language.name), class: "btn btn-primary" %>
  </div>
</div>

<ul class="list-group">
  <%= for repo <- @language.repos do %>
    <%= render("repo_item.html", conn: @conn, repo: repo, language: @language) %>
  <%= end %>
</ul>
